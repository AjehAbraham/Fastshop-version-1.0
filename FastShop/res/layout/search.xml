<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white" 
      android:orientation="vertical">

      <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/partial_transparent"></FrameLayout> 
      
  

<LinearLayout
       android:id="@+id/header"    
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:padding="10dp"
       android:elevation="10dp">
  <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="left" 
        android:gravity="left"            
        android:layout_marginLeft="12dp"
        android:src="@drawable/outline_arrow_back_ios_white_48"/>    
        
  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Search categories" 
        android:layout_marginLeft="10dp"
        android:background="@null"/>
    
</LinearLayout>
   <View 
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:layout_marginBottom="10dp"   
       android:background="@color/light_white"/>  
    
      
      
 <LinearLayout
       android:id="@+id/search_layout"    
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal" 
       android:background="@drawable/cornered_layout"
       android:padding="2dp"
       android:gravity="center"        
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"        
        >
   <EditText
        android:id="@+id/search_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12sp"
        android:hint="Search or scan for Items,categories on FastShop"
        android:singleLine="true"
        android:maxLines="1"
        android:focusable="true" 
        android:imeOptions="actionSearch"
        android:focusableInTouchMode="true"         
        android:layout_marginLeft="1dp"
        android:layout_marginRight="2dp"
        android:padding="10dp"
        android:textCursorDrawable="@drawable/text_cursor"
        android:background="@drawable/edit_text_null"/>
       <ImageView
        android:id="@+id/scan_options_btn"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_gravity="right" 
        android:gravity="center"      
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"             
        android:src="@drawable/outline_camera_alt_white_48"/>
  <ImageView
        android:id="@+id/clear_search"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_gravity="right" 
        android:gravity="center" 
        android:visibility="gone"       
        android:layout_marginRight="5dp" 
        android:layout_marginTop="5dp"        
        android:src="@drawable/outline_cancel_white_48"/>
       <ImageView
        android:id="@+id/search_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="right" 
        android:gravity="center"            
        android:layout_marginRight="0dp" 
        android:visibility="gone"      
        android:background="@drawable/circle_background"           
        android:src="@drawable/outline_search_white_48"/>
      </LinearLayout> 
      
  
  <ScrollView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1">
  <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical" >
    
      <LinearLayout
       android:id="@+id/sorting_layout"       
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:padding="2dp"
       android:background="@null">  
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Sort by Categories"
        android:layout_marginLeft="5dp"
        android:background="@null"/> 
   <ImageView
        android:id="@+id/sorting_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right" 
        android:gravity="right"            
        android:layout_marginRight="5dp"
        android:src="@drawable/outline_sort_white_36"/>
      </LinearLayout> 
    
  <LinearLayout
       android:id="@+id/sorting_list"       
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="2dp"
       android:elevation="12dp"  
       android:background="@null"></LinearLayout>
    
    
    
    
     <LinearLayout
       android:id="@+id/search_list"    
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:elevation="10dp"     
       android:visibility="gone"> 
     </LinearLayout>
  </LinearLayout>
      </ScrollView>        
      
      
      
      
      

    <LinearLayout
       android:id="@+id/navigation_layout"    
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
      </LinearLayout>
      
</LinearLayout>