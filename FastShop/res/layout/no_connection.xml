<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/connection_header"
    android:background="@color/partial_transparent">
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_marginTop="30dp" >
      <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"  
        android:layout_marginTop="10dp"    
        android:layout_marginBottom="12dp"   
        android:src="@drawable/outline_wifi_off_white_48"/>
          
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="No Internet connection" 
        android:layout_marginLeft="5dp"
        android:background="@null"/>
       </LinearLayout>  
    
    
 <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/cornered_default"
        android:layout_marginTop="20dp" >
   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Retry"
        android:background="@null"/>        
 <!--ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"   
        android:src="@drawable/outline_loop_white_48"/-->
                  
           
       </LinearLayout>
    
</LinearLayout>