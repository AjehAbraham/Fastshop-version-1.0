<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/loader_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="@color/grey"      
    >
    
<LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:gravity="center"
       android:layout_gravity="center"
       android:background="@color/partial_transparent"      
        >       
 <ImageView
        android:id="@+id/loader_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/circular_background"
        android:src="@drawable/outline_shopping_cart_checkout_white_48"/>

       <ImageView
        android:id="@+id/loader_imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/circular_background"
        android:src="@drawable/outline_loop_white_48"/>

   <ProgressBar
    android:id="@+id/loader_progressBar"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:indeterminateDrawable="@drawable/custom_progress_bar"
    android:indeterminate="true"
    android:layout_gravity="center" />

       
</LinearLayout>   
</FrameLayout>
</LinearLayout>