<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    android:background="@color/partial_transparent"
    android:id="@+id/scan_list">
  
  <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
      
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="2dp"
       android:gravity="center"
       android:background="@color/white">
  <ImageView
        android:id="@+id/selected_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center" 
        android:gravity="center"            
        android:layout_marginRight="5dp"
        android:src="@drawable/outline_close_white_48"/>    
                
    <View 
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:background="@color/black"
      />  
   <ImageView
        android:id="@+id/close_prompt"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="right" 
        android:gravity="right"            
        android:layout_marginRight="5dp"
        android:src="@drawable/outline_close_white_48"/>    
           
       
  <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:padding="2dp"
       android:gravity="center"
       android:layout_gravity="center"
       android:background="@null" 
       android:layout_marginBottom="10dp"
       android:layout_marginTop="5dp"   
        >      
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Data are stored secure and Encrypted" 
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:textColor="@color/green"
        android:background="@null"/>     
   <ImageView
        android:id="@+id/lock_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="3dp" 
        android:layout_marginRight="7dp"        
        android:src="@drawable/outline_lock_white_48"/>
   </LinearLayout> 
              
    <View 
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:background="@color/light_white"
      />     
     <LinearLayout
      android:id="@+id/camera_layout"   
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:padding="5dp"
       android:layout_gravity="center"
       android:layout_marginRight="5dp" 
       android:layout_marginLeft="5dp"          
        > 
     
    <ImageView
        android:id="@+id/camera_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center" 
        android:gravity="center"            
        android:layout_marginRight="5dp"
        android:src="@drawable/outline_camera_alt_white_48"/>    
        
  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Take Photo" 
        android:layout_marginLeft="10dp"
        android:background="@null"/>
     </LinearLayout>   
   <View 
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:background="@color/light_white"
      />     
     <LinearLayout
       android:id="@+id/gallery_layout"   
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:padding="5dp"
       android:layout_gravity="center"
       android:layout_marginRight="5dp" 
       android:layout_marginLeft="5dp"          
        > 
     
    <ImageView
        android:id="@+id/gallery_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center" 
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:src="@drawable/outline_collections_white_48"/>    
        
  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Select from gallery" 
        android:layout_marginLeft="15dp"
        android:background="@null"/>
     </LinearLayout>    
    <View 
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:background="@color/light_white"
      />     
     <LinearLayout
       android:id="@+id/history_layout"     
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:padding="5dp"
       android:layout_gravity="center"
       android:layout_marginRight="5dp" 
       android:layout_marginLeft="5dp"          
        > 
     
    <ImageView
        android:id="@+id/history_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center" 
        android:gravity="center"            
        android:layout_marginRight="5dp"
        android:src="@drawable/outline_history_black_48"/>    
        
  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:text="Search history"
        android:background="@null"/>
     </LinearLayout>          
  <View 
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:background="@color/light_white"
      />    
       
    <LinearLayout
       android:id="@+id/cancel_prompt_layout"  
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:padding="10dp"
       android:layout_gravity="center"
       android:gravity="center"  
       android:elevation="20dp" 
       android:layout_marginRight="5dp" 
       android:layout_marginLeft="5dp"
       android:layout_marginTop="12dp" 
       android:layout_marginBottom="5dp"        
        >

  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Cancel" 
        android:layout_marginLeft="5dp"
        android:background="@null"/>
     </LinearLayout>
   </LinearLayout>
      
       
    
</LinearLayout>